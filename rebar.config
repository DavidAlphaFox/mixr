{erl_opts,
 [debug_info,
  {parse_transform, lager_transform}]}.
{deps,
 [{edown, ".*",
   {git, "https://github.com/uwiger/edown.git",
    {branch, "master"}}},
  {eredis, ".*",
   {git, "https://github.com/wooga/eredis.git",
    {branch, "master"}}},
  {cowboy, ".*",
   {git, "https://github.com/ninenines/cowboy.git",
    {branch, "master"}}},
  {eutils, ".*",
   {git, "https://github.com/emedia-project/eutils.git",
    {branch, "master"}}},
  {lager, ".*",
   {git, "https://github.com/basho/lager.git",
    {branch, "master"}}}]}.
{eunit_opts,
 [verbose,
  {report,
   {eunit_surefire,
    [{dir, "."}]}}]}.
{edoc_opts,
 [{doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {new, true},
  {packages, false},
  {stylesheet, []},
  {image, []},
  {top_level_readme,
   {"./documentation.md", "https://github.com/nexkap/kafe"}}]}.
